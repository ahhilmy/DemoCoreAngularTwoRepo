@model LoginViewModel

<div style="margin-top: 20px;">
    <h3>Login</h3>
    <hr />
</div>

<div>
    <form asp-controller="Account" asp-action="Login" method="post" class="form-horizontal" role="form">
        <input type="hidden" asp-for="ReturnUrl" />
        <div asp-validation-summary="All" class="text-danger"></div>

        <div class="form-group">
            <label asp-for="UserName" class="control-label col-md-2"></label>
            <div class="col-md-2">
                <input asp-for="UserName" class="form-control" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="Password" class="control-label col-md-2"></label>
            <div class="col-md-2">
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-2">
                <input type="submit" class="btn btn-primary" value="Log in" />
            </div>
        </div>
    </form>
</div>